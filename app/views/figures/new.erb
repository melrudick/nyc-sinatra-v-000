<h1>Create a New Figure</h1>
<form method="post" action="/figures">
  <label>Enter New Figure Name:</label>
  <input type="text" name="figure[name]" id="figure_name">
<h2>Choose from title list, if any:</h2>
<% Title.all.each do |title| %>
<input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>">
<%=title.name%>
<%end%>

<label for="new_title">Or create new title:</label>
<input type="text" name="title[name]" id="new_title">
<h3>Choose from list of Landmarks:</h3>
<% Landmark.all.each do |landmark| %>
<label><%=landmark.name%></label>
<input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>">
<%end%>
<input type="text" name="landmark[name]" id="new_landmark">
  <input type="submit" name="Create New Figure" value="Create New Figure">
</form>
